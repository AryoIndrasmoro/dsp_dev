<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_order_form_dsp" model="ir.ui.view">
            <field name="name">sale.order.form.dsp</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<field name="project_id" context="{'partner_id':partner_invoice_id, 'default_pricelist_id':pricelist_id, 'default_name':name, 'default_type': 'contract'}" groups="sale.group_analytic_accounting" domain="[('type','in',['view','normal','contract'])]" position="after">
            		<field name="sale_type"/>
                </field>
                
				<page string="Other Information" groups="base.group_user" position="after">
			  		<page string="Confirmation">
			  			<group>
			  				<field name="date_confirmed" attrs="{'required':[('state','in',['sent'])]}" />
							<field name="person_name" attrs="{'required':[('state','in',['sent'])]}" />
							<field name="file_confirmed" attrs="{'required':[('state','in',['sent'])]}" />
		 	  			</group>
			  		</page>
				</page>                
            </field>
        </record>
    </data>
</openerp>
            